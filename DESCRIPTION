Package: refreg
Type: Package
Title: Conditional Multivariate Reference Regions
Version: 0.1.0
Authors@R: c(
    person("Óscar", "Lado-Baleato",email="oscarlado.baleato@usc.es", role =c("cre","aut")),
    person("Javier", "Roca-Pardiñas", email="roca@uvigo.es", role =c("aut", "ctb")),
